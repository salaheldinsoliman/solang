{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2020",
		"outDir": "dist",
		"lib": [
			"ES2020", "WebWorker"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,   /* enable all strict type-checking options */
		"allowJs": true, /* Allow javascript files to be compiled. */

		// exlcude the webpack.config.js file
		
